{
  "debug": 1,
  "src": ["./index.js", "./src/**/*.js"],
  "assets": {
    "/img": ["./build/*.{png,ico}"]
  },
  "dest": "./docs/api",
  "clean": true,
  "jsdoc": {
    "package": true,
    "module": true,
    "hierarchy": true,
    "sort": "grouped"
  },
  "app": {
    "title": "Localized Readability",
    "base": "./",
    "favicon": "./build/favicon.ico",
    "routing": "path",
    "server": "github"
  },
  "template": {
    "path": "zebra",
    "options": {
      "title": {
        "label": "Localized Readability"
      },
      "logo": {
        "dark": "img/logo-black.png",
        "light": "img/logo-white.png"
      },
      "navbar": {
        "enabled": true,
        "fixed": true,
        "dark": false,
        "animations": true,
        "menu": [
          {
            "label": "Try",
            "iconClass": "fas fa-file-alt",
            "href": "https://olevik.github.io/localized-readability/",
            "target": "_blank"
          },
          {
            "label": "Docs",
            "iconClass": "fas fa-book",
            "href": "https://github.com/OleVik/localized-readability#usage",
            "target": "_blank"
          },
          {
            "label": "Download",
            "iconClass": "fas fa-cloud-download-alt",
            "href": "https://github.com/OleVik/localized-readability#install",
            "target": "_blank"
          },
          {
            "label": "Code",
            "iconClass": "fab fa-github",
            "href": "https://github.com/OleVik/localized-readability",
            "target": "_blank"
          }
        ]
      }
    }
  }
}
